CFLAGS=-g -O3

# first target (this one) is built by default
all: tokenizer

test: tester

#include file dependencies
tokenizer.o: tokenizer.h
history.o: history.h
main.o: history.h tokenizer.h
tester.o: history.h tokenizer.h

# $@=target, $^=prerequisites
tokenizer: tokenizer.o history.o main.o
	cc -o $@ $^ $(CFLAGS)

tester: tokenizer.o history.o tester.o
	cc -o $(test) $^ $(CFLAGS)

#deletes files generated by compilation
clean:
	rm -f *.o *.c~ *.h~ tokenizer

run:tokenizer
	./tokenizer
